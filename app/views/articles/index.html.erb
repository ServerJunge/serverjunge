<% @articles.each do |article| %>
<h1>
	<%= link_to article.title, article_path(article) %>
</h1>

<hr>
	<h5>
		<p class="text-muted"><i class="fa fa-clock-o"></i> Artikel wurde vor <%= time_ago_in_words(article.created_at) %> verfasst | <i class="fa fa-tags"></i> Themen - <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
		</p>
	</h5>

<p>
	<%= raw article.text %>
</p>

<% if user_signed_in? %>
  <%= link_to 'New article', new_article_path %>
<% end %>
	<hr>

<% end %>

<div class="row">
    <div class="col-md-8 col-md-offset-4">
		<%= will_paginate(@articles, renderer: BootstrapPagination::Rails) %>
	</div>
</div>

