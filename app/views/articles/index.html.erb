<% @articles.each do |article| %>
<div class="blog-item">

                    <h1><%= link_to article.title, article_path(article) %></h1>





	<h5>
		<p class="text-muted">Artikel wurde vor <%= time_ago_in_words(article.created_at) %> verfasst | Tags - <%= raw article.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
		</p>
	</h5>

<p>
	<%= raw article.text %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Artikel lesen', new_article_path, class: 'btn btn-danger' %>
<% end %>
</div>
<% end %>


<div class="row">
    <div class="col-md-8 col-md-offset-4">
		<%= will_paginate(@articles, renderer: BootstrapPagination::Rails) %>
	</div>
</div>
