<!DOCTYPE html>
<html>
<head>
  <title>ServerJunge</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body>
	<div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Server<span class="text-primary">Junge</span></a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Start', page_path('start') %></li>
            <li><%= link_to "Artikel", articles_path %></li>
            <li><a href="#">Über Mich</a></li>
            <li><a href="#">Kontakt</a></li>
            <li><%= link_to 'Impressum', page_path('impressum') %></li>
          </ul>
          <!-- DEVISE LOGIN -->
            <p class="navbar-text pull-right">
              <a href="#"><i class="fa fa-rss fa-lg"></i></a> | <a href="#"><i class="fa fa-twitter fa-lg"></i></a>

            
          <!-- DEVISE END -->

        </div><!--END COLLAPSE -->
      </div><!--END CONTAINER FROM NAVBAR -->
    </div><!--END NAVBAR -->

       <!-- Carousel -->
    <div id="myCarousel" class="carousel slide jumbotron">
      <div class="container">
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="item active">
            <h1><i class="fa fa-lock"></i> OneDrive verschlüsseln</h1>
            <p class="lead">Mit BoxCryptor Dateien sicher in der Cloud ablegen!</p> 
            <p><a class="btn btn-info btn-lg" href="#">So geht es!</a>        
          </div>
          <div class="item">
            <h1><i class="fa fa-envelope"></i> Office 365 Tipp</h1>
            <p class="lead">Dynamische Verteilerliste in Office 365!</p>
            <p><a class="btn btn-info btn-lg" href="#">So funktionert es!</a>      
          </div>
          <div class="item">
            <h1>Learn how to build it for Android</h1>
            <p class="lead">We'll teach you how to build it from scratch!</p>
            <p><a class="btn btn-success btn-lg" href="#">Get started today!</a></p>           
          </div>
        </div>     
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="icon-prev"></span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="icon-next"></span>
      </a>      
    </div> <!-- End Carousel -->

    <div class="container">
      <div class="row">
        <div class="col-md-10">

      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
          <%= value %>
            <button type="button" class="close" data-dismiss="alert">×</button>
        </div>
      <% end %>

    	<%= yield %>

        </div><!-- END COL 8 -->
      </div><!-- END ROW -->
     </div><!-- END CONTAINER -->

<div id="footer" class="navbar-default">
      <div class="container">

</span>
      </div>
    </div>

</body>
</html>
